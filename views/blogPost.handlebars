<div class='blogP text-center'>
    <h2>{{name}}</h2> 
    <p>{{title}}</p>
    <p>{{message}}</p>
    <p>Created by {{user.name}} on {{format_date date_created}}</p>
</div>

<div class='card'>
<h5>Comments</h5>

    {{#each comments as |comment|}}
    <div>
        <p>{{comment.message}}</p>
        <p>{{comment.user.name}}, {{format_date comment.date_created}}</p>
    </div>
    {{/each}}

</div>

<div class='add-comment'>
    
        <form class='form new-comment-form' post-id= "{{id}}">

            <div class="form-group">
                <label for="message-input">Message</label>
                <textarea class="form-control" id="message-input" rows="2"></textarea>
            </div>
                <div class="form-group">
                <button type="submit" class="btn btn-primary">Comment</button>
            </div>
        </form>
</div>

<script src="/js/comment.js"></script> 
  
