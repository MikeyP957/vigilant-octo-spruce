<div class="row">
    <div class="col-auto">
        <h2>Welcome, {{name}}</h2>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <h3>Write a blog post:</h3>

        <form class='form new-blogPost-form'>
            <div class="form-group">
                <label for='blogPost-title'>Post Title:</label>
                <input class='form-input' type= 'text' id='blogPost-title' name:'blogPost-title'/>
            </div>
            <div class="form-group">
                <label for="message-input">Message</label>
                <textarea class="form-control" id="message-input" rows="4"></textarea>
            </div>
                <div class="form-group">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </form>
    </div>
    {{#if blogPosts.length}}
    <div class='cole-md-6 blogPost-list'>
        <h3>Current Posts:</h3>

        {{#each blogPosts as |blogPost|}}
        <div class="row mb-2">
        <div class="col-md-8">
            <h4><a href="/blogPost/{{blogPost.id}}">{{blogPost.name}}</a></h4>
        </div>
        <div class="col-md-4">
            <button class="btn btn-sm btn-danger" data-id="{{blogPost.id}}">DELETE</button>
        </div>
        </div>
        {{/each}}
    </div>
    {{/if}}
</div>

<script src="./js/profile.js"></script>    